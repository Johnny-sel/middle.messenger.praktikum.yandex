{
  "author": "Evgenii Seleznev",
  "name": "messenger",
  "version": "1.0.0",
  "description": "messenger yandex practicum",
  "license": "ISC",
  "engines": {
    "node": ">= 18.12.1"
  },
  "main": "index.js",
  "source": "src/index.ts",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean-dist": "rm -rf dist && mkdir dist",
    "init": "npm run clean-dist",
    "dev": "npm run init && parcel ./src/index.html",
    "build": "npm run init && parcel build ./src/index.html",
    "check": "tsc --noEmit"
  },
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "devDependencies": {
    "@parcel/transformer-sass": "^2.8.2",
    "@parcel/transformer-typescript-tsc": "^2.8.2",
    "parcel": "^2.8.2",
    "parcel-namer-rewrite": "^2.0.0-rc.3",
    "typescript": "^4.9.4"
  },
  "parcel-namer-rewrite": {
    "rules": {
      "(.*)\\.(css)": "css/$1.$2",
      "(.*)\\.(js)": "js/$1.$2",
      "(.*)\\.(woff2|woff|ttf|otf|eot)": "fonts/$1.$2",
      "(.*)\\.(svg|png|gif|jpg)": "img/$1.$2"
    }
  }
}
