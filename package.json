{
  "author": "Evgenii Seleznev",
  "name": "messenger",
  "version": "1.0.0",
  "description": "messenger yandex practicum",
  "license": "ISC",
  "engines": {
    "node": ">= 18.12.1"
  },
  "source": "src/app/index.html",
  "private": true,
  "scripts": {
    "start": "npm run build:prod --no-cache && node ./server.js",
    "dev": "webpack serve --mode=development --progress",
    "start:render": "node ./server.js",
    "build": "webpack",
    "build:prod": "webpack --config webpack.config.prod.js",
    "lint": "eslint . --fix",
    "stylelint": "stylelint **/*.sass",
    "test": "jest --coverage"
  },
  "devDependencies": {
    "@types/jest": "29.2.5",
    "@typescript-eslint/eslint-plugin": "5.48.1",
    "@typescript-eslint/parser": "5.48.1",
    "babel-jest": "29.4.1",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.3",
    "cssnano": "^5.1.15",
    "eslint": "8.31.0",
    "eslint-config-google": "0.14.0",
    "express": "4.18.2",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "29.3.1",
    "jest-environment-jsdom": "29.3.1",
    "mini-css-extract-plugin": "^2.7.2",
    "node-sass": "^8.0.0",
    "postcss": "^8.4.21",
    "postcss-cssnext": "^3.1.1",
    "postcss-import": "^15.1.0",
    "postcss-loader": "^7.0.2",
    "sass": "^1.58.3",
    "sass-loader": "^13.2.0",
    "style-loader": "^3.3.1",
    "stylelint": "14.16.1",
    "stylelint-config-sass-guidelines": "9.0.1",
    "sugarss": "^4.0.1",
    "ts-jest": "29.0.5",
    "ts-loader": "^9.4.2",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.1.2",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "typescript": "4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1",
    "webpack-merge": "^5.8.0"
  },
  "alias": {
    "@app/actions": "./src/app/actions",
    "@app/utils": "./src/app/utils",
    "@app/functions": "./src/app/functions",
    "@app/pages": "./src/app/pages",
    "@app/components": "./src/app/components",
    "@app/types": "./src/app/types",
    "@app/resources": "./src/app/resources",
    "@app/modules": "./src/app/modules",
    "@app/constants": "./src/app/constants",
    "@app/img": "./src/app/static/img",
    "@app/styles": "./src/app/styles",
    "@core/http": "./src/core/http/http.ts",
    "@core/component": "./src/core/component/component.ts",
    "@core/router": "./src/core/router/router.ts",
    "@core/tags": "./src/core/vdom/tags/tags.ts",
    "@core/types": "./src/core/types.ts",
    "@core/utils": "./src/core/utils",
    "@api": "./src/api",
    "@api/sockets/chat": "./src/api/sockets/chat.ts",
    "@api/repositories": "./src/api/repositories",
    "@api/types": "./src/api/types"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSameLine": false,
    "bracketSpacing": false,
    "embeddedLanguageFormatting": "auto",
    "htmlWhitespaceSensitivity": "css",
    "insertPragma": false,
    "jsxSingleQuote": true,
    "printWidth": 100,
    "proseWrap": "always",
    "quoteProps": "as-needed",
    "requirePragma": false,
    "semi": true,
    "singleAttributePerLine": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false,
    "vueIndentScriptAndStyle": false,
    "arrayExpand": true
  }
