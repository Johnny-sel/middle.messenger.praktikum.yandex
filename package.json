{
  "author": "Evgenii Seleznev",
  "name": "messenger",
  "version": "1.0.0",
  "description": "messenger yandex practicum",
  "license": "ISC",
  "engines": {
    "node": ">= 18.12.1"
  },
  "source": "src/app/index.html",
  "scripts": {
    "clean": "rimraf dist",
    "dev": "npm run clean && parcel --no-cache",
    "start": "npm run build --no-cache && node ./server.js",
    "build": "npm run clean && parcel build --no-cache",
    "lint": "eslint . --fix",
    "stylelint": "stylelint **/*.sass --fix",
    "test": "jest --coverage"
  },
  "browserslist": "> 0.25%, last 2 versions, not dead",
  "devDependencies": {
    "@parcel/transformer-sass": "2.8.2",
    "@parcel/transformer-typescript-tsc": "2.8.2",
    "@types/jest": "29.2.5",
    "@typescript-eslint/eslint-plugin": "5.48.1",
    "@typescript-eslint/parser": "5.48.1",
    "babel-jest": "29.4.1",
    "eslint": "8.31.0",
    "eslint-config-google": "0.14.0",
    "express": "4.18.2",
    "jest": "29.3.1",
    "jest-environment-jsdom": "29.3.1",
    "parcel": "2.8.3",
    "parcel-plugin-at-alias": "0.15.0",
    "rimraf": "3.0.2",
    "stylelint": "14.16.1",
    "stylelint-config-sass-guidelines": "9.0.1",
    "ts-jest": "29.0.5",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.1.2",
    "typescript": "4.9.4"
  },
  "alias": {
    "@app/actions": "./src/app/actions",
    "@app/utils": "./src/app/utils",
    "@app/functions": "./src/app/functions",
    "@app/pages": "./src/app/pages",
    "@app/components": "./src/app/components",
    "@app/types": "./src/app/types",
    "@app/resources": "./src/app/resources",
    "@app/modules": "./src/app/modules",
    "@app/constants": "./src/app/constants",
    "@app/img": "./src/app/static/img",
    "@app/styles": "./src/app/styles",
    "@core/http": "./src/core/http/http.ts",
    "@core/component": "./src/core/component/component.ts",
    "@core/router": "./src/core/router/router.ts",
    "@core/tags": "./src/core/vdom/tags/tags.ts",
    "@core/types": "./src/core/types.ts",
    "@core/utils": "./src/core/utils",
    "@api": "./src/api",
    "@api/websocket/chat": "./src/api/sockets/chat.ts",
    "@api/repositories": "./src/api/repositories",
    "@api/types": "./src/api/types"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSameLine": false,
    "bracketSpacing": false,
    "embeddedLanguageFormatting": "auto",
    "htmlWhitespaceSensitivity": "css",
    "insertPragma": false,
    "jsxSingleQuote": true,
    "printWidth": 100,
    "proseWrap": "always",
    "quoteProps": "as-needed",
    "requirePragma": false,
    "semi": true,
    "singleAttributePerLine": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false,
    "vueIndentScriptAndStyle": false,
    "arrayExpand": true
  }
}
