{
  "author": "Evgenii Seleznev",
  "name": "messenger",
  "version": "1.0.0",
  "description": "messenger yandex practicum",
  "license": "ISC",
  "engines": {
    "node": ">= 18.12.1"
  },
  "main": "src/index.js",
  "source": "src/index.js",
  "scripts": {
    "clean-dist": "rm -rf dist && mkdir dist",
    "init": "npm run clean-dist",
    "dev": "npm run init && parcel ./src/app/index.html",
    "build": "npm run init && parcel build ./src/app/index.html"
  },
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "devDependencies": {
    "@parcel/transformer-sass": "^2.8.2",
    "parcel": "^2.8.2",
    "parcel-namer-rewrite": "^2.0.0-rc.3",
    "parcel-plugin-at-alias": "^0.15.0"
  },
  "parcel-namer-rewrite": {
    "rules": {
      "(.*)\\.(css)": "css/$1.$2",
      "(.*)\\.(js)": "js/$1.$2",
      "(.*)\\.(woff2|woff|ttf|otf|eot)": "fonts/$1.$2",
      "(.*)\\.(svg|png|gif|jpg)": "img/$1.$2"
    }
  },
  "alias": {
    "@core/state": "./src/core/state.js",
    "@core/render": "./src/core/render.js",
    "@core/component": "./src/core/component.js",
    "@core/tags": "./src/core/tags.js",
    "@core/parse": "./src/core/parse.js",
    "@core/utils": "./src/core/utils.js",
    "@pages": "./src/app/pages",
    "@components": "./src/app/components"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSameLine": false,
    "bracketSpacing": true,
    "embeddedLanguageFormatting": "auto",
    "htmlWhitespaceSensitivity": "css",
    "insertPragma": false,
    "jsxSingleQuote": true,
    "printWidth": 100,
    "proseWrap": "preserve",
    "quoteProps": "as-needed",
    "requirePragma": false,
    "semi": true,
    "singleAttributePerLine": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false,
    "vueIndentScriptAndStyle": false
  }
}
