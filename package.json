{
  "author": "Evgenii Seleznev",
  "name": "messenger",
  "version": "1.0.0",
  "description": "messenger yandex practicum",
  "license": "ISC",
  "engines": {
    "node": ">= 18.12.1"
  },
  "source": "src/app/index.html",
  "scripts": {
    "clean": "rimraf dist",
    "dev": "npm run clean && parcel",
    "start": "npm run build && node ./server.ts",
    "build": "npm run clean && parcel build",
    "check": "tsc --noEmit"
  },
  "browserslist": "> 0.25%, last 2 versions, not dead",
  "devDependencies": {
    "@parcel/transformer-sass": "2.8.2",
    "@parcel/transformer-typescript-tsc": "^2.8.2",
    "express": "4.18.2",
    "parcel": "2.8.2",
    "parcel-plugin-at-alias": "0.15.0",
    "rimraf": "3.0.2",
    "typescript": "^4.9.4"
  },
  "alias": {
    "@core/component": "./src/core/component/component.ts",
    "@core/router": "./src/core/router/router.ts",
    "@core/tags": "./src/core/vdom/tags.ts",
    "@core/types": "./src/core/types.ts",
    "@core/utils": "./src/core/utils",
    "@app/pages": "./src/app/pages",
    "@app/components": "./src/app/components",
    "@app/types": "./src/app/types",
    "@app/resources": "./src/app/resources",
    "@app/modules": "./src/app/modules",
    "@app/const": "./src/app/const",
    "@app/img": "./src/app/static/img",
    "@app/styles/varibales": "./src/app/styles/varibales.sass"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSameLine": false,
    "bracketSpacing": true,
    "embeddedLanguageFormatting": "auto",
    "htmlWhitespaceSensitivity": "css",
    "insertPragma": false,
    "jsxSingleQuote": true,
    "printWidth": 100,
    "proseWrap": "preserve",
    "quoteProps": "as-needed",
    "requirePragma": false,
    "semi": true,
    "singleAttributePerLine": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false,
    "vueIndentScriptAndStyle": false,
    "arrayExpand": true
  }
}
