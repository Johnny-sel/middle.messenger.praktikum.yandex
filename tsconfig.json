{
  "compilerOptions": {
    "lib": [
      "es2016",
      "es2020",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@framework": ["./src/core/framework"],
      "@framework/types": ["./src/core/framework/types"],
      "@utils": ["./src/core/utils"],
      "@pages": ["./src/app/pages"],
      "@components": ["./src/app/components"],

    },
    "experimentalDecorators": true,
    "jsxImportSource": "preact",
    "isolatedModules": true,
    "module": "commonjs",
    "target": "es6",
  },
  "include": [
    "./src/**/*", 
  ]
}